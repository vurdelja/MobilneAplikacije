<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EmployeeUpdateWorkTimeFragment"
    android:background="#DCD0FF"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/profilePhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/nameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ime"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/employeeNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <TextView
            android:id="@+id/surnameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prezime" />

        <TextView
            android:id="@+id/employeeSurnameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <!-- Tekst "Date" i TextView za prikaz datuma -->
        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="16dp" />

        <CalendarView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </CalendarView>

        <!-- Horizontalni layout za timePickere -->
        <Spinner
            android:id="@+id/daySpinner"
            android:layout_width="407dp"
            android:layout_height="49dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TimePicker
                android:id="@+id/startTimePicker"
                android:layout_width="190dp"
                android:layout_height="314dp" />

            <TimePicker
                android:id="@+id/endTimePicker"
                android:layout_width="181dp"
                android:layout_height="312dp" />

        </LinearLayout>

        <!-- Horizontalni layout za dugmad "Change" i "Events" -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/eventsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Events" />

            <Button
                android:id="@+id/changeButton"
                android:layout_width="180dp"
                android:layout_height="51dp"
                android:text="Change" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
